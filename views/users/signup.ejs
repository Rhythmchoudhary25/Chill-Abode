<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">Signup on ChillAbode</h2>
    <div class="col-6 offset-3 mt-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
            <label for="username" class="form-label"><b>Username</b></label>
            <input 
                type="text" 
                name="username" 
                id ="username"
                class="form-control"
                required
            />
            <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
            <label for="email" class="form-label"><b>Email</b></label>
            <input 
                type="email" 
                name="email" 
                id ="email"
                class="form-control"
                required
            />
            </div>
            <div class="mb-3">
            <label for="password" class="form-label"><b>Password</b></label>
            <input 
                type="password" 
                name="password" 
                id ="password"
                class="form-control"
                required
            />
            </div>
            <button type="submit" class="btn btn-dark add-btn mt-3">SignUp</button>
        </form>
    </div>
</div>