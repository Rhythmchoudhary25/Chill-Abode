<style>
  .btn-search {
    border-radius: 3rem !important;
    border: 2px solid rgb(230, 15, 36) !important;
  }
  .search-bar {
    border-radius: 3rem !important;
    border: 2px solid rgb(230, 15, 36) !important;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .btn-search:hover {
    background-color: rgb(230, 15, 36) !important;
    color: white !important;
  }

  .navbar-collapse {
    align-items: flex-end !important;
    text-align: right !important;
    background: none !important;
    padding: 0 !important;
    box-shadow: none !important;
    border-radius: 0 !important;
  }

  .navbar-content-area {
    background: none;
    box-shadow: none;
    padding: 0;
    border-radius: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 0;
    min-width: 0;
    max-width: none;
    width: 100%;
    justify-content: space-between;
  }

  .navbar-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .navbar-section.right {
    margin-left: auto;
    gap: 0.5rem;
  }

  .navbar-section.center {
    flex: 1 1 0;
    justify-content: center;
    display: flex;
  }

  /* Mobile/collapsed: right align, white background, only as wide as content */
  @media (max-width: 767.98px) {
    .navbar-content-area {
      background-color: #fff;
      padding: 1rem;
      border-radius: 0.5rem;
      box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
      display: inline-block;
      flex-direction: column;
      align-items: flex-end;
      margin-top: 0.5rem;
      margin-right: 0.5rem;
      margin-left: auto;
      min-width: 320px;
      max-width: 95vw;
      width: auto;
    }
    .navbar-section {
      flex-direction: column;
      align-items: flex-end;
      width: 100%;
      gap: 0.5rem;
    }
    .navbar-section.center {
      order: 2;
      align-items: center;
      justify-content: center;
      margin: 1rem 0;
      width: 100%;
    }
    .navbar-section.right {
      order: 3;
      align-items: flex-end;
      width: 100%;
    }
    .navbar-section.left {
      order: 1;
      align-items: flex-end;
      width: 100%;
    }
  }

  .navbar-collapse .nav-link {
    color: #333 !important;  
    margin: 0.3rem 0;
    text-align: right !important;
  }

  .navbar-collapse .nav-link:hover {
    background-color: rgba(230, 15, 36, 0.1);
    border-radius: 0.3rem;
  }

  .navbar-collapse .nav-link.user {
    display: inline-block;
    width: auto;
    background-color: rgb(230, 15, 36);
    color: #fff !important;
    text-align: center;
    border-radius: 2rem;
    padding: 0.5rem 1.2rem;
    margin: 0.3rem 0.3rem 0.3rem 0;
    font-weight: 600;
    transition: background 0.3s ease;
    border: 2px solid rgb(230, 15, 36);
  }

  .navbar-collapse .nav-link.user:hover {
    background-color: #b91024;
    color: #fff !important;
  }

  /* Right nav links flex and right-aligned */
  .navbar-nav.ms-auto {
    display: flex;
    align-items: flex-end !important;   /* Align nav links to the right */
    justify-content: flex-end !important;
    text-align: right !important;
    gap: 0.5rem;
  }

  .navbar-collapse form.d-flex {
    justify-content: flex-end !important;
  }

  .navbar-collapse .nav-link,
  .navbar-collapse .nav-link.user {
    margin-left: 0.5rem !important;
    margin-right: 0 !important;
    display: inline-block;
    text-align: right !important;
  }
</style>


<nav class="navbar navbar-expand-md bg-body-tertiary border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-solid fa-umbrella-beach"></i>&nbsp;&nbsp; 
      <span class="brand-text">ChillAbode</span>
    </a>
    <button class="navbar-toggler" 
        type="button" 
        data-bs-toggle="collapse" 
        data-bs-target="#navbarNavAltMarkup" >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-content-area">
        <div class="navbar-section left">
          <a class="nav-link" href="/listings">Explore</a>
        </div>
        <div class="navbar-section center">
          <form class="d-flex" role="search">
            <input
              class="form-control me-2 search-bar" 
              type="search" 
              placeholder="Search by location" 
              aria-label="Search" 
            />
            <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
          </form>
        </div>
        <div class="navbar-section right">
          <a class="nav-link" href="/listings/new">Add your place</a>
          <% if(!currUser) { %>
          <a class="nav-link user" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link user" href="/login"><b>Log In</b></a>
          <% } %>
          <% if(currUser) { %>
          <a class="nav-link user" href="/logout"><b>Log Out</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>